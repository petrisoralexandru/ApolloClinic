@{
    ViewData["Title"] = "Investigații și prețuri";
}


<section class="relative pt-16 bg-gray-50">
    <div class="container mx-auto">
        <div class="flex flex-wrap w-full mb-20 flex-col items-center text-center">
            <h1 class="focus:outline-none text-4xl lg:text-5xl text-center font-tiempos leading-10 text-main-text lg:w-5/12 md:w-9/12 pt-4">Investigatii și prețuri</h1>
            <p class="lg:w-1/2 w-full leading-relaxed text-main-text font-graphik">Acesta este catalogul complet în privința investigatiilor practicate la clinica Apollo, sperăm că te putem ajuta să-ți menții sănătatea în formă!</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 items-baseline mx-auto">
            <div class="px-2 space-y-8 bg-white rounded-md mb-8" aria-label="Sidebar">
                <div class="container grid justify-center justify-items-center">
                    <h2 tabindex="0" class="focus:outline-none text-2xl leading-tight text-main-text font-tiempos py-4 pl-2 text-center">Ai nevoie de mai multe informatii?</h2>
                    <a asp-area="Main" asp-controller="Home" asp-action="Medici" class="items-center px-3 py-4 mb-4 border border-transparent text-md leading-4 font-medium rounded-md text-white font-graphik bg-blue-400 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <i class="fa-solid fa-address-card"></i>&nbsp; Contactează-ne
                    </a>
                </div>
            </div>

            <div class="w-full px-4">
                <div class="flex ">
                    <div class="w-full px-4">
                        <div class="relative flex flex-col">
                            <div x-data="{ open: false }" class="py-3 flex flex-col items-center justify-center relative overflow-hidden">
                                <div @@click="open = ! open" class="p-4 bg-white w-full rounded flex justify-between items-center">
                                    <div class="flex items-center gap-2">
                                        <h4 class="font-medium text-xl text-main-text font-tiempos">Alergologie și imunologie</h4>
                                    </div>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                                    </svg>
                                </div>
                                <div x-show="open" @@click.outside="open = false" x-transition:enter="transition ease-out duration-300"
                                     x-transition:enter-start="opacity-0 translate-y-0"
                                     x-transition:enter-end="opacity-100 translate-y-0"
                                     x-transition:leave="transition ease-in duration-300"
                                     x-transition:leave-start="opacity-100 translate-y-10"
                                     x-transition:leave-end="opacity-0 translate-y-0" class="w-full bg-white p-4">
                                    <div class="grid grid-cols-2">
                                        <h4 class="text-md text-slate font-graphik text-blue pt-2">Consult alergologie</h4>
                                        <div class="grid justify-center pt-2">
                                            <h4 class="text-md text-slate font-graphik text-blue">250 RON</h4>
                                        </div>
                                    </div>
                                    <div class="grid grid-cols-2">
                                        <h4 class="text-md text-slate font-graphik text-blue pt-2">Probă respiratorie simplă (Spirometrie)</h4>
                                        <div class="grid justify-center pt-2">
                                            <h4 class="text-md text-slate font-graphik text-blue">135 RON</h4>
                                        </div>
                                    </div>
                                    <div class="grid grid-cols-2">
                                        <h4 class="text-md text-slate font-graphik text-blue pt-2">Test alergic prick/alergen</h4>
                                        <div class="grid justify-center pt-2">
                                            <h4 class="text-md text-slate font-graphik text-blue">50 RON</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div x-data="{ open: false }" class="py-3 flex flex-col items-center justify-center relative overflow-hidden">
                                <div @@click="open = ! open" class="p-4 bg-white w-full rounded flex justify-between items-center">
                                    <div class="flex items-center gap-2">
                                        <h4 class="font-medium text-xl text-main-text font-tiempos">Asistent medical</h4>
                                    </div>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                                    </svg>
                                </div>
                                <div x-show="open" @@click.outside="open = false" x-transition:enter="transition ease-out duration-300"
                                     x-transition:enter-start="opacity-0 translate-y-0"
                                     x-transition:enter-end="opacity-100 translate-y-0"
                                     x-transition:leave="transition ease-in duration-300"
                                     x-transition:leave-start="opacity-100 translate-y-10"
                                     x-transition:leave-end="opacity-0 translate-y-0" class="w-full bg-white p-4">
                                    <div class="grid grid-cols-2">
                                        <h4 class="text-md text-slate font-graphik text-blue pt-2">Cardiotocografie</h4>
                                        <div class="grid justify-center pt-2">
                                            <h4 class="text-md text-slate font-graphik text-blue">150 RON</h4>
                                        </div>
                                    </div>
                                    <div class="grid grid-cols-2">
                                        <h4 class="text-md text-slate font-graphik text-blue pt-2">EKG traseu</h4>
                                        <div class="grid justify-center pt-2">
                                            <h4 class="text-md text-slate font-graphik text-blue">95 RON</h4>
                                        </div>
                                    </div>
                                    <div class="grid grid-cols-2">
                                        <h4 class="text-md text-slate font-graphik text-blue pt-2">Holter EKG</h4>
                                        <div class="grid justify-center pt-2">
                                            <h4 class="text-md text-slate font-graphik text-blue">340 RON</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div x-data="{ open: false }" class="py-3 flex flex-col items-center justify-center relative overflow-hidden">
                                <div @@click="open = ! open" class="p-4 bg-white w-full rounded flex justify-between items-center">
                                    <div class="flex items-center gap-2">
                                        <h4 class="font-medium text-xl text-main-text font-tiempos">Chirurgie generala</h4>
                                    </div>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                                    </svg>
                                </div>
                                <div x-show="open" @@click.outside="open = false" x-transition:enter="transition ease-out duration-300"
                                     x-transition:enter-start="opacity-0 translate-y-0"
                                     x-transition:enter-end="opacity-100 translate-y-0"
                                     x-transition:leave="transition ease-in duration-300"
                                     x-transition:leave-start="opacity-100 translate-y-10"
                                     x-transition:leave-end="opacity-0 translate-y-0" class="w-full bg-white p-4">
                                    <div class="grid grid-cols-2">
                                        <h4 class="text-md text-slate font-graphik text-blue pt-2">Adeverinta medicala</h4>
                                        <div class="grid justify-center pt-2">
                                            <h4 class="text-md text-slate font-graphik text-blue">200 RON</h4>
                                        </div>
                                    </div>
                                    <div class="grid grid-cols-2">
                                        <h4 class="text-md text-slate font-graphik text-blue pt-2">Bandare/sedinta</h4>
                                        <div class="grid justify-center pt-2">
                                            <h4 class="text-md text-slate font-graphik text-blue">685 RON</h4>
                                        </div>
                                    </div>
                                    <div class="grid grid-cols-2">
                                        <h4 class="text-md text-slate font-graphik text-blue pt-2">Control chirurgie generala</h4>
                                        <div class="grid justify-center pt-2">
                                            <h4 class="text-md text-slate font-graphik text-blue">185 RON</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="//unpkg.com/alpinejs" defer></script>
