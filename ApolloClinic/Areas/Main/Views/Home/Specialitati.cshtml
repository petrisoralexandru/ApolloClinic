@{
    ViewData["Title"] = "Specialitați";
}

<section class="relative pt-16 bg-gray-50">
    <div class="container mx-auto">
        <div class="flex flex-wrap w-full mb-20 flex-col items-center text-center">
            <h1 class="focus:outline-none text-4xl lg:text-5xl text-center font-tiempos leading-10 text-main-text lg:w-5/12 md:w-9/12 pt-4">Specialități</h1>
            <p class="lg:w-1/2 w-full leading-relaxed text-main-text font-graphik">Acesta este catalogul complet în privința specializărilor practicate la clinica Apollo, sperăm că te putem ajuta să-ți menții sănătatea în formă!</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 items-baseline	mx-auto">
            <nav class="px-2 space-y-8 bg-white rounded-md mb-8" aria-label="Sidebar">
                <div>
                    <h2 tabindex="0" class="focus:outline-none text-2xl leading-tight text-main-text font-tiempos py-4 pl-2">Accesări populare</h2>

                    <a href="#" class="text-blue font-graphik text-base group flex items-center px-2 py-2 hover:text-blue-600 hover:underline">
                        Cardiologie
                    </a>

                    <a href="#" class="text-blue font-graphik text-base group flex items-center px-2 py-2 hover:text-blue-600 hover:underline">
                        Stomatologie
                    </a>

                    <a href="#" class="text-blue font-graphik text-base group flex items-center px-2 py-2 hover:text-blue-600 hover:underline">
                        Chirurgie generală
                    </a>

                    <a href="#" class="text-blue font-graphik text-base group flex items-center px-2 py-2 hover:text-blue-600 hover:underline">
                        Pediatrie
                    </a>

                    <a href="#" class="text-blue font-graphik text-base group flex items-center px-2 py-2 hover:text-blue-600 hover:underline">
                        Alergologie și imunologie
                    </a>

                </div>
            </nav>



            <div class="w-full px-4">
                <div class="flex ">
                    <div class="w-full px-4">
                        <div class="relative flex flex-col">
                            <div class="px-4 py-5 flex-auto bg-white rounded-md mb-8">

                                <h6 class="text-xl mb-1 font-tiempos text-main-text">Cardiologie</h6>
                                <p class="mb-4 text-blue font-graphik">
                                    <a asp-area="Main" asp-controller="Home" asp-action="Medici" class="hover:text-blue-600 hover:underline">Vezi medici</a> | <a asp-area="Main" asp-controller="Home" asp-action="" class="hover:text-blue-600 hover:underline">Vezi investigatii</a>
                                </p>
                            </div>

                            <div class="px-4 py-5 flex-auto bg-white rounded-md mb-8">

                                <h6 class="text-xl mb-1 font-tiempos text-main-text">Stomatologie</h6>
                                <p class="mb-4 text-blue font-graphik">
                                    <a asp-area="Main" asp-controller="Home" asp-action="Medici" class="hover:text-blue-600 hover:underline">Vezi medici</a> | <a asp-area="Main" asp-controller="Home" asp-action="" class="hover:text-blue-600 hover:underline">Vezi investigatii</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
