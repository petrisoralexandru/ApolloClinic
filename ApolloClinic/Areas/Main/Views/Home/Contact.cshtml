@{
    ViewData["Title"] = "Contactează-ne";
}

<section class="relative pt-16 bg-gray-50">
    <div class="container 2xl:container 2xl:mx-auto lg:px-20 lg:px-10 md:px-6 px-4">
        <div class="flex flex-wrap w-full mb-20 flex-col items-center text-center">
            <h1 class="focus:outline-none text-4xl lg:text-5xl text-center font-tiempos leading-10 text-main-text lg:w-5/12 md:w-9/12 pt-4">Conteactează-ne</h1>
            <p class="lg:w-1/2 w-full leading-relaxed text-main-text font-graphik">în această pagină poți găsi informații cu privire la localizarea clinicilor medicale Apollo cât și un formular de contact în cazul în care dorești să ne comunici.</p>
        </div>
         <div class="w-full h-full lg:flex items-start justify-center xl:py-20 py-8 px-4">
            <div class="lg:w-1/2 xl:mr-12 lg:mr-6">
                <img src="/images/contact.jpg" alt="image of a dog with heart" class="w-full h-full rounded-lg" />
                <div class="grid grid-cols-1 md:grid-cols-2 items-center mt-8 justify-center">
                    <div arial-label="Address" class="mr-6 border md:w-auto w-full rounded border-gray-200 py-6 pr-9 pl-6">
                        <p class="text-md leading-4 text-main-text font-tiempos">Policlinica Apollo Tulcea</p>
                        <p class="text-base leading-4 mt-3 text-main-text font-graphik">
                            <i class="fa-solid fa-map-location text-blue"></i>&nbsp; Str. Toamnei nr. 10A, Tulcea
                        </p>
                        <p class="text-base leading-4 mt-3 text-main-text font-graphik">
                            <i class="fa-solid fa-envelope text-blue"></i>&nbsp; receptie.tulcea@clinica-apollo.ro
                        </p>
                        <p class="text-base leading-4 mt-3 text-main-text font-graphik">
                            <i class="fa-solid fa-phone text-blue"></i>&nbsp; +40 702 028 389
                        </p>
                    </div>
                    <div arial-label="Address" class="mr-6 border md:w-auto w-full h-full rounded border-gray-200 py-6 pr-9 pl-6">
                        <p class="text-md leading-4 text-main-text font-tiempos">Policlinica Apollo Galați</p>
                        <p class="text-base leading-4 mt-3 text-main-text font-graphik">
                            <i class="fa-solid fa-map-location text-blue"></i>&nbsp; Str. Brăilei, nr. 157A, Galați
                        </p>
                        <p class="text-base leading-4 mt-3 text-main-text font-graphik">
                            <i class="fa-solid fa-envelope text-blue"></i>&nbsp; receptie.galati@clinica-apollo.ro
                        </p>
                        <p class="text-base leading-4 mt-3 text-main-text font-graphik">
                            <i class="fa-solid fa-phone text-blue"></i>&nbsp; +40 754 566 471
                        </p>
                    </div>
                    
                </div>
            </div>
            <div class="lg:w-1/3 xl:pl-12 lg:pl-6 lg:pt-0 pt-4">
                <h1 aria-label="Get in touch" role="heading" class="text-3xl textmain-text font-tiempos">Formular de contact</h1>
                <p role="contentinfo" class="mt-4 text-base leading-6 text-main-text font-graphik lg:block hidden">
                    Vă rugăm să completați fiecare camp, fiind obligatorii!
                </p>
                <p role="contentinfo" class="mt-4 text-base leading-6 text-gray-600 lg:hidden">It is a long established fact that a reader will be distracted by the readable</p>
                <div class="xl:flex items-center justify-between mt-10">
                    <div>
                        <p class="text-base font-medium leading-4 mb-4 text-main-text font-graphik">Nume</p>
                        <input type="name" aria-label="Te rog, completează câmpul [Nume]" class="xl:w-48 w-full p-3 text-base leading-none text-gray-500 bg-gray-100 rounded placeholder-gray-500 font-graphik" placeholder="ex. Popescu" />
                    </div>
                    <div class="xl:ml-6 xl:mt-0 mt-4">
                        <p class="text-base font-medium leading-4 mb-4 text-main-text font-graphik">Prenume</p>
                        <input type="name" aria-label="Te rog, completează câmpul [Prenume]" class="xl:w-48 w-full p-3 text-base leading-none text-gray-500 bg-gray-100 rounded placeholder-gray-500 font-graphik" placeholder="ex. Alexandru" />
                    </div>
                </div>
                <div class="mt-6">
                    <p class="text-base font-medium leading-4 mb-4 text-main-text font-graphik">Adresă de email</p>
                    <input type="email" aria-label="Te rog, completează câmpul [Email]" class="w-full p-3 text-base leading-none text-gray-500 bg-gray-100 rounded placeholder-gray-500 font-graphik" placeholder="ex. popescu.alexandru@gmail.com" />
                </div>
                <div class="mt-6">
                    <p class="text-base font-medium leading-4 mb-4 text-main-text font-graphik">Mesaj</p>
                    <textarea aria-label="Te rog, introdu un mesaj pe care să-l transmiți echipei medicale Apollo" class="w-full resize-none h-40 p-3 text-base leading-none text-gray-500 bg-gray-100 rounded placeholder-gray-500 font-graphik"></textarea>
                </div>
                <button role="button" arial-label="trimite mesaj" class="focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 hover:bg-blue-600 text-base leading-4 py-6 px-8 text-white bg-blue rounded mt-12 font-graphik">
                    <i class="fa-solid fa-paper-plane"></i>&nbsp; Trimite mesajul
                </button>
            </div>
        </div>

    </div>
</section>
